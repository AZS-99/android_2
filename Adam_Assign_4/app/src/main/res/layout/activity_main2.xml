<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Main2Activity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteY="8dp" tools:layout_editor_absoluteX="8dp">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:background="#ffff00"
                android:layout_height="0dp"
                android:layout_weight="0.5">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="City"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:hint="City"
                        android:ems="10"
                        android:maxLength="8"
                        android:id="@+id/cityEditText"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:hint="Name"
                        android:maxLength="8"
                        android:ems="10"
                        android:id="@+id/nameEditText"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="Sport"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <Spinner
                        android:id="@+id/sportSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:drawable/btn_dropdown"
                        android:spinnerMode="dropdown"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="MVP"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:hint="MVP"
                        android:maxLength="8"
                        android:ems="10"
                        android:id="@+id/mvpEditText"/>
            </LinearLayout>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="Stadium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:hint="Stadium"
                        android:maxLength="8"
                        android:ems="10"
                        android:id="@+id/stadiumEditText"/>
            </LinearLayout>
            <RelativeLayout android:layout_height="wrap_content" android:layout_width="wrap_content"> // Only works inside a RelativeLayout
                <ImageView
                        android:id="@+id/imgView"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="#ffffff"
                />

                <TextView
                        android:id="@+id/imgViewText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/imgView"
                        android:layout_alignTop="@+id/imgView"
                        android:layout_alignRight="@+id/imgView"
                        android:layout_alignBottom="@+id/imgView"
                        android:layout_margin="1dp"
                        android:gravity="center"
                        android:text="IMAGE NOT FOUND"
                        android:textColor="#000000"
                        android:textSize="20sp"/>
            </RelativeLayout>


        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:background="#ff00ff"
                android:layout_height="0dp"
                android:layout_weight="0.5">
            <Button
                    android:text="SUBMIT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/submitBtn"/>
            <Button
                    android:text="EXIT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/exitBtn" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>