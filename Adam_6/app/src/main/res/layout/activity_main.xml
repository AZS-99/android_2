<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#A0E03A"
            tools:layout_editor_absoluteY="8dp"
            tools:layout_editor_absoluteX="8dp">
        <TextView
                android:text="Lab 6"
                android:textSize="25sp"
                android:textColor="#000000"
                android:background="#75ba1b"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:id="@+id/textView"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5">
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp">
                    <TextView
                            android:text="ID"
                            android:textSize="25sp"
                            android:textColor="#0000ff"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/idText"
                            android:layout_weight="0.25"/>
                    <EditText
                            android:textSize="25dp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:maxLength="8"
                            android:hint="ID"
                            android:ems="10"
                            android:id="@+id/idEditText"
                            android:layout_weight="0.75"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp">
                    <TextView
                            android:text="Name"
                            android:textSize="25sp"
                            android:textColor="#0000ff"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/nameText"
                            android:layout_weight="0.25"/>
                    <EditText
                            android:textSize="25dp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:hint="Name"
                            android:ems="10"
                            android:id="@+id/nameEditText"
                            android:layout_weight="0.75"/>
                </LinearLayout>

                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp">
                    <TextView
                            android:text="Marks"
                            android:textSize="25sp"
                            android:textColor="#0000ff"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/marksText"
                            android:layout_weight="0.25"/>
                    <EditText
                            android:textSize="25dp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:maxLength="8"
                            android:hint="Mark"
                            android:ems="10"
                            android:id="@+id/marksEditText"
                            android:layout_weight="0.75"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5">
                <Button
                        android:text="Add New Student"
                        android:textSize="20sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/addButton"/>
                <Button
                        android:text="View All Students"
                        android:textSize="20sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/viewStudentsButton"/>
                <Button
                        android:text="Find Student (using id)"
                        android:textSize="20sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/getStudentButton"/>
                <Button
                        android:text="Delete Student (using id)"
                        android:textSize="20sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/deleteStudentButton"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>